<Page
    x:Class="T2010A_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T2010A_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:Name="SplView" DisplayMode="Inline" IsPaneOpen="True" OpenPaneLength="250">
        <SplitView.Pane>
            <Button Content="Open" Click="Button_Click" Margin="0,100,0,0" VerticalAlignment="Top" Width="318" Height="71" HorizontalAlignment="Left"/>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="10,81,0,0" Text="Hello World!" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72" SelectionChanged="TextBlock_SelectionChanged"/>
                <Button Click="DemoForm" Content="Go to demo form" Margin="11,215,0,0" VerticalAlignment="Top" Width="318" Height="71"/>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
