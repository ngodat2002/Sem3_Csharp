<Page
    x:Class="Labs2.Labs2.Mail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Labs2.Labs2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Frame x:ConnectionId='2' x:Name="MailFrame">
            <StackPanel Grid.Column="0" Margin="0,100,0,0">
                <TextBlock Text="Mail" FontSize="30" HorizontalAlignment="Center"/>
                <TextBox x:ConnectionId='6' x:Name="inputFullname" Margin="20" HorizontalAlignment="Center" Width="250" Height="40" Text="" TextWrapping="Wrap" PlaceholderText="Full name"/>
            <TextBox x:ConnectionId='7' x:Name="inputEmail" Margin="20" HorizontalAlignment="Center" Width="250" Height="40" Text="" TextWrapping="Wrap" PlaceholderText="Email"/>
            <TextBox x:ConnectionId='8' x:Name="inputPhone" Margin="20" HorizontalAlignment="Center" Width="250" Height="40" Text="" TextWrapping="Wrap" PlaceholderText="Phone number"/>
            <Button x:ConnectionId='9'                Margin="20" Background="Beige" HorizontalAlignment="Center" Width="150" Content="Submit"/>
            <Button x:ConnectionId='10'              Margin="20" Background="Beige" HorizontalAlignment="Center" Width="150" Content="Back"/>
        </StackPanel>
        </Frame>
        <StackPanel Grid.Column="1" Margin="0,100,0,0">
            <TextBlock x:ConnectionId='3' x:Name="txtFullname" Text="Full name" FontSize="20" TextWrapping="Wrap" Margin="150,20,0,0"/>
            <TextBlock x:ConnectionId='4' x:Name="txtEmail" Text="Email" FontSize="20" TextWrapping="Wrap" Margin="150,20,0,0"/>
            <TextBlock x:ConnectionId='5' x:Name="txtPhone" Text="Phone number" FontSize="20" TextWrapping="Wrap" Margin="150,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>

